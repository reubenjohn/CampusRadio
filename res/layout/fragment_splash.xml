<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.campusradio.android.Splash$PlaceholderFragment" >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@drawable/side"
        android:contentDescription="@leftbigwave"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_weight="0.52"
        android:src="@drawable/side" 
     android:contentDescription="@leftsmallwave"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_weight="0.52"
        android:src="@drawable/centrelogo" 
        android:contentDescription="@centre"/>
       

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_weight="0.52"
        android:src="@drawable/side2" 
        android:contentDescription="@rightsmallwave"/>
       
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@drawable/side2" 
        android:contentDescription="@rightbigwave"/>

</LinearLayout>